{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build glfw app",
      "type": "shell",
      "command": "g++",
      "args": [
          "-std=c++17",
          "-pthread",
          "modules/src/*.c",
          "-Imodules/include",
          "-Lmodules/libs",
          "-lglfw3dll",
          "-lopengl32",
          "-lOpenAL32",
          "-lgdi32",
          "-luser32",
          "-lstdc++fs",
          "-lwinmm",
          "-o", "build/app.exe"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },

       "problemMatcher": ["$gcc"],
      "options": {
        "cwd": "${workspaceFolder}"
      }
    }
  ]
}
